<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Acitivities.New_Project_List">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iut"
        android:layout_centerInParent="true"
        android:alpha=".1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Your Projects"
            android:textColor="#036F06"
            android:textSize="30sp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <ListView
                android:id="@+id/allprojects"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:divider="#2CA01D"
                android:dividerHeight="1dp"
                android:listSelector="#2CA01D">

            </ListView>

        </LinearLayout>

            <Button
                android:onClick="showPopUp"
                android:typeface="monospace"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/createNewProject"
                android:text="Create New"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp"
                android:background="@drawable/buttonstyle"
                android:drawableLeft="@drawable/add_sign"
                android:paddingHorizontal="20dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>