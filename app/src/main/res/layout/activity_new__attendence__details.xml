<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".NewActivities.New_Attendence_Details">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="5"
            android:background="@color/borderColor"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Attendence Details"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                >

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".9"
                >

                <AutoCompleteTextView
                    android:id="@+id/autoStudentId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Student Id"
                    android:gravity="center"
                    >
                </AutoCompleteTextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                >
                <Button
                    android:id="@+id/seeDetailsId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:typeface="monospace"
                    android:text="See Details"
                    android:textSize="15sp"
                    >
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                >

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                >
                <ListView
                    android:id="@+id/detailsAttendenceListviewId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@color/borderColor"
                    android:divider="@color/borderColor"
                    android:dividerHeight="1dp"
                    >

                </ListView>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
