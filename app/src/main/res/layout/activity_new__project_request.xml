<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_height="550dp"
    android:background="@drawable/edittextdesign"
    tools:context=".Acitivities.New_Project_Request">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">



        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Project Name"
            android:paddingHorizontal="5dp"
            android:drawableLeft="@drawable/project_name"
            android:textColor="#164E0F"
            android:textSize="14sp"/>

        <AutoCompleteTextView
            android:layout_marginTop="5dp"
            android:id="@+id/superVisor_Id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Superviosr"
            android:paddingHorizontal="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:drawableLeft="@drawable/supervisor_name"
            android:textColor="#164E0F"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="5dp"
            >
            <EditText
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="Team Mates Id"
                android:paddingHorizontal="5dp"
                android:drawableLeft="@drawable/team_mate_id"
                android:textColor="#164E0F"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/addTeamMateId"
                android:text="ADD"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="5"
                />

        </LinearLayout>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="course name"
            android:paddingHorizontal="5dp"
            android:drawableLeft="@drawable/course_name"
            android:textColor="#164E0F"
            android:textSize="14sp">

        </EditText>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Description"
            android:paddingHorizontal="5dp"
            android:textColor="#164E0F"
            android:drawableLeft="@drawable/description"
            android:textSize="14sp"/>



        <TextView
            android:id="@+id/confirmationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="confirmation msg ashbe ekhane"
            android:layout_gravity="center"
            android:textColor="#F0FF2222"
            android:textSize="14dp">
        </TextView>


        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/buttonIdd"
            android:text="Request"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />



    </LinearLayout>

</LinearLayout>