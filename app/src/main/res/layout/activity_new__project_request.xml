<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivities.New_Project_Request">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iut"
        android:layout_centerInParent="true"
        android:alpha=".1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Projects"
                android:textColor="#036F06"
                android:textSize="30sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/projectNameId"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="Project Name"
                android:textColor="#164E0F"
                android:background="@drawable/edittextdesign"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/superVisor_Id"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Superviosr"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/edittextdesign"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/teamMateId"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="Team Mates Id"
                android:textColor="#164E0F"
                android:background="@drawable/edittextdesign"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/courseNameId"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="Course Name"
                android:textColor="#164E0F"
                android:background="@drawable/edittextdesign"
                android:textSize="14sp">

            </EditText>

            <EditText
                android:id="@+id/descriptionId"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="Description"
                android:paddingHorizontal="10dp"
                android:textColor="#164E0F"
                android:background="@drawable/edittextdesign"
                android:textSize="14sp"/>



            <TextView
                android:id="@+id/confirmationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="confirmation msg ashbe ekhane"
                android:layout_gravity="center"
                android:textColor="#F0FF2222"
                android:textSize="14dp">
            </TextView>


            <Button
                android:id="@+id/buttonRequestId"
                android:layout_marginTop="40dp"
                android:text="Request"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>