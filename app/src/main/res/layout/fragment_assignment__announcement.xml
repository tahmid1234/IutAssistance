<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivities.Assignment_Announcement">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/iut"
        android:alpha="0.05">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/AssignmentNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Assignment No"
                android:textColor="#164E0F"/>

            <EditText
                android:id="@+id/et_AssignmentNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:padding="5dp"
                android:textColor="#164E0F"
                android:background="@drawable/round_linear_corner"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/deadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Deadline"
                android:textColor="#164E0F"/>

            <EditText
                android:id="@+id/et_deadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:padding="5dp"
                android:textColor="#164E0F"
                android:background="@drawable/round_linear_corner"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/media"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Media"
                android:textColor="#164E0F"/>

            <EditText
                android:id="@+id/et_media"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="#164E0F"
                android:padding="5dp"
                android:background="@drawable/round_linear_corner"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Description"
                android:textColor="#164E0F"/>

            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="7"
                android:padding="5dp"
                android:inputType="textMultiLine"
                android:textColor="#164E0F"
                android:background="@drawable/round_linear_corner"
                />

        </LinearLayout>


        <Button
            android:id="@+id/assignmentPost"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Post"
            android:background="@drawable/pop_up_btn_shape"
            android:layout_margin="15dp"
            android:textColor="@color/borderColor"
            android:layout_gravity="center_horizontal"
            >

        </Button>


    </LinearLayout>

</FrameLayout>