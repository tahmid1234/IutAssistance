<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".home_page_student"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#164E0F"
        android:visibility="gone"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:elevation="12dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/imageView1"
                android:src="@drawable/ryad"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Riyad\nB.Sc in SWE"
            android:textColor="#FFFFFF"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/profile_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="20dp"
                        android:src="@drawable/profile_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Profile"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quizBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="20dp"
                        android:src="@drawable/chat_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Quiz"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/routine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/classUpdateBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:src="@drawable/routine_icon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Reschedule"
                        android:gravity="center"/>

                </LinearLayout>








            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/assignment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/assignmentbtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:src="@drawable/assignment_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Assignment"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:src="@drawable/result_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Marks"
                        android:gravity="center"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/unknown"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="20dp"
                        android:src="@drawable/attendence_sheet" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="More"
                        android:gravity="center"/>

                </LinearLayout>




            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_margin="20dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            >

            <Button
                android:id="@+id/moreid"
                android:layout_width="150dp"
                android:layout_marginTop="25dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4FB18F"
                android:layout_marginLeft="125dp"
                android:layout_height="150dp"
                android:background="@drawable/btn_round"
                android:text="COURSE Selection" />



        </LinearLayout>





</LinearLayout>



</LinearLayout>