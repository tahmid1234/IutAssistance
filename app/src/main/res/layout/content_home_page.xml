<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".home_page_student"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#164E0F"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:elevation="12dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/imageView1"
                android:src="@drawable/ryad"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Riyad\nB.Sc in SWE"
            android:textColor="#FFFFFF"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="5"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="20dp"
                        android:src="@drawable/profile_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Profile"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="20dp"
                        android:src="@drawable/chat_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Quiz"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/routine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:src="@drawable/routine_icon"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Routine"
                        android:gravity="center"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/assignment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:src="@drawable/assignment_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Assignment"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:src="@drawable/result_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Result"
                        android:gravity="center"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/unknown"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:padding="20dp"
                        android:layout_weight="3"
                        android:id="@+id/moreid"
                        android:src="@drawable/attendence_sheet"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Course Selection"
                        android:gravity="center"/>

                </LinearLayout>




            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_margin="20dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:layout_weight="5"
            android:weightSum="10"
            android:background="#EFF3EC"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="140dp"
                android:background="#1242"
                android:hint="Write Your Post Here"
                android:id="@+id/posteditid"
                android:gravity="center"
                />

                <Spinner

                    android:id="@+id/post_spinner_id_1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    >

                </Spinner>


            <Button
                android:id="@+id/postid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:text="Post"
                android:layout_marginTop="15dp"
                android:backgroundTint="#164E0F"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundbutton"

                />


        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >


        <ListView
            android:id="@+id/postList"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</LinearLayout>