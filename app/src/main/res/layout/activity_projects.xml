<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_student"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iut"
        android:layout_centerInParent="true"
        android:alpha=".05"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Projects "
            android:textAlignment="center"
            android:textColor="#036F06"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/sec_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Group Name"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/grp_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="#164E0F"
                android:textSize="14sp"
                android:hint="use unique name"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/crs_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Course"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/crs_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                android:textColor="#164E0F"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView

                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="3"
                android:text="Emaild (Supervisor)"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/supervisor_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                android:textColor="#164E0F"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Total Number of Members"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/members"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="including you"
                android:layout_weight="7"

                android:textColor="#164E0F"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Team Mate1 id"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/team_mate_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:hint="your team mate's id"
                android:textColor="#164E0F"
                android:textSize="14sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:id="@+id/quizSyllabus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Team Mate2 Id"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/team_mate_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="#164E0F"
                android:hint="your team mate's id"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/quizDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Team Mate3 Id"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/team_mate_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="#164E0F"
                android:hint="your team mate's id"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Team Mate4 Id"
                android:textColor="#164E0F"

                android:textSize="14sp" />

            <EditText
                android:id="@+id/team_mate_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="#164E0F"
                android:hint="your team mate's id"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView

                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="3"
                android:text="Project Description"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/project_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="#164E0F"
                android:textSize="14sp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/request_btn"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:background="#036F06"
            android:text="Request"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/task"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp"
            android:background="#036F06"
            android:text="Task"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    </LinearLayout>
</RelativeLayout>