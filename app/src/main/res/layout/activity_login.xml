<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Acitivities.signup_student">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="#FFFFFF">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/iut_logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="IUT ASSISTANT"
            android:textStyle="bold"
            android:textColor="#269419"
            android:gravity="center"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="#2CA01D">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:textColorHint="#FFFFFF"
            android:theme="@style/Widget.Design.TextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#FFFFFF"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailAdd"
                android:hint="Email"
                android:textColor="#FFFFFF"
                android:textAlignment="center"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:textColorHint="#FFFFFF"
            android:theme="@style/Widget.Design.TextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#FFFFFF"
            app:hintTextAppearance="@style/text_in_layout_hint_Style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/enteredPassword"
                android:hint="Password"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:textColorHint="#ffffff"
                android:textAlignment="center"
                />
        </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/LogIn"
                    android:text="Log in"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:backgroundTint="#164E0F"
                    android:background="@drawable/roundbutton"
                    android:layout_centerHorizontal="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFF"
                    android:layout_below="@+id/LogIn"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="50dp"/>

                <TextView
                    android:id="@+id/orText"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/LogIn"
                    android:background="#2CA01D"
                    android:layout_marginTop="20dp"
                    android:text="OR"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>

                <Button
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:id="@+id/SignUp"
                    android:text="Sign up"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_below="@+id/orText"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#164E0F"
                    android:background="@drawable/roundbutton"
                    android:layout_centerHorizontal="true"/>

                <Button
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:id="@+id/admin"
                    android:text="Log in as Admin "
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_below="@+id/SignUp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#164E0F"
                    android:background="@drawable/roundbutton"
                    android:layout_centerHorizontal="true"
                     />

            </RelativeLayout>


        </LinearLayout>


</LinearLayout>