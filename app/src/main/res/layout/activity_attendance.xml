<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iut"
        android:alpha=".1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="3"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/sec_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="#036F06"
                android:textStyle="bold"
                android:text="TextView1" />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="#036F06"
                android:textStyle="bold"
                android:text="TextView2" />
            <TextView
                android:id="@+id/crs_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="#036F06"
                android:textStyle="bold"
                android:text="TextView3" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student Id: "
            android:textColor="#036F06"
            android:textSize="25dp"
            android:layout_weight="2"
            android:textStyle="bold" />

            <EditText
                android:id="@+id/Attendence_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#036F06"
                />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="3"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/present_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Present"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:backgroundTint="#15692A"
            android:background="@drawable/roundbutton"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/absent_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:layout_margin="25dp"
            android:backgroundTint="#F54B0C"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/late_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Late"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#EEF508"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />


    </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="3"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/attendanceInpercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:fontFamily="serif"
            android:text="First Class"
            android:textColor="#036F06"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/dateATT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:fontFamily="serif"
            android:text="Date"
            android:textColor="#036F06"
            android:textSize="24sp" />

            <Button
                android:id="@+id/record"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Records"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#ffff99"
                android:textColor="#Ff5545"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>