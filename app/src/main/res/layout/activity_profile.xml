<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_student"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iut"
        android:layout_centerInParent="true"
        android:alpha=".05"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riyad"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#164E0F"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.sc in "
            android:layout_marginLeft="155dp"
            android:textColor="#164E0F"
            />

        <EditText
            android:id="@+id/progText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student Id"
            android:textColor="#164E0F"
            android:layout_weight="4"
            />
        <TextView
            android:id="@+id/idText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="6"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textColor="#164E0F"
            android:layout_weight="4"
            />
        <TextView
            android:id="@+id/deptText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="6"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text="Residential Status"
            android:textColor="#164E0F" />
        <Spinner
            android:layout_width="0dp"
            android:id="@+id/res_status_id"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:layout_weight="6"
            >


        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hall"
                android:textColor="#164E0F"
                android:layout_weight="4"
                />
            <Spinner
                android:layout_width="0dp"
                android:id="@+id/hall_id"
                android:textAlignment="center"
                android:layout_height="40dp"
                android:layout_weight="6"
                >


            </Spinner>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Present Address"
            android:textColor="#164E0F"
            android:layout_weight="4"
            />


        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="6"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Date of Birth"
            android:textColor="#164E0F" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="1.5"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="1.5"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="3"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Blood Group"
            android:textColor="#164E0F"
            android:layout_weight="4"
            />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:id="@+id/blood_id"
            android:textAlignment="center"
            >

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact No"
            android:textColor="#164E0F"
            android:layout_weight="4"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#164E0F"
            android:textSize="14sp"
            android:layout_weight="6"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#164E0F"
            />


    </LinearLayout>

    </LinearLayout>
    </RelativeLayout>