<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_student"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iut"
        android:layout_centerInParent="true"
        android:alpha=".05"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#036F06"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Name"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                android:textColor="#164E0F"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/deptText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Department"
                android:textColor="#164E0F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deptValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"

                android:textColor="#164E0F"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/idText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="ID"
            android:textColor="#164E0F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Syllabus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"

            android:textColor="#164E0F"
            android:textSize="14sp" />


    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/uniText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
           android:text="University"
            android:textColor="#164E0F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/uniValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"

            android:textColor="#164E0F"
            android:textSize="14sp" />


    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/profText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Profession"
            android:textColor="#164E0F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"

            android:textColor="#164E0F"
            android:textSize="14sp" />


    </LinearLayout>

       </LinearLayout>
    </RelativeLayout>